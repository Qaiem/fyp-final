# Step 1: Build the React App
FROM node:18-alpine as build
WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .
RUN npm run build

# Step 2: Serve with Nginx
FROM nginx:alpine
COPY --from=build /app/dist /usr/share/nginx/html
# NOTE: If your build folder is named 'build' instead of 'dist', change '/app/dist' to '/app/build' above
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]